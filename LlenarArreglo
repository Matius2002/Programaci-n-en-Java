package llenararreglo;

import java.util.Scanner;
import javax.swing.JOptionPane;

public class LLenarArreglo {

    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);//Clase Scanner
        int nElementos;//Declaramos la variable
        
        //Pedimos el número de elementos del arreglo
        nElementos = Integer.parseInt(JOptionPane.showInputDialog("Digite el número de elementos del arreglo:"));
        
        //Le asignamos el número de elementos al arreglo
        char[] letras = new char[nElementos];
        
        System.out.println("Digite los elementos del arreglo:");
        for(int i=0;i<nElementos;i++){//Ciclo para pedir los elementos del arreglo, dependiendo del número de elementos
            System.out.print((i+1)+". Digite un caracter: ");//Pedimos los elementos
            letras[i] = input.next().charAt(0);//Los guardamos en el arreglo
        }
        
        System.out.println("\nLos caracteres del arreglos son:");
        for(int i=0;i<nElementos;i++){//Arreglo para mostrar los elementos
            System.out.println(letras[i]+" ");//Mostramos los elementos
        }
    }
    
}
